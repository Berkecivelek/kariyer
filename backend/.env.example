NODE_ENV=development
PORT=3000
HOST=localhost

# PostgreSQL veritabanı
DATABASE_URL="postgresql://postgres:password@localhost:5432/careerai?schema=public"

# Mock database kullanma - gerçek PostgreSQL kullan
USE_MOCK_DB=false

# JWT Secrets - Production için güçlü anahtarlar oluşturun:
# openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-secure-refresh-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Anthropic Claude API Key (AI özellikleri için)
# https://console.anthropic.com adresinden alın
ANTHROPIC_API_KEY=your-anthropic-api-key

# CORS Origins (virgülle ayrılmış)
CORS_ORIGIN=http://localhost:5500,http://localhost:3000
